<?xml version="1.0" encoding="utf-8"?>
<com.jordylangen.woodstorage.view.TagFilterView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <TextView
        android:id="@+id/dialog_tag_filter_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dialog_title_padding"
        android:text="@string/dialog_tag_filter_title"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_tag_filter_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</com.jordylangen.woodstorage.view.TagFilterView>