<?xml version="1.0" encoding="utf-8"?>
<com.jordylangen.woodstorage.view.TagFilterView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dialog_tag_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:padding="@dimen/dialog_padding"
            android:id="@+id/dialog_tag_filter_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dialog_title_padding"
            android:text="@string/dialog_tag_filter_title"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:padding="@dimen/dialog_padding"
            android:id="@+id/dialog_tag_filter_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"/>

</com.jordylangen.woodstorage.view.TagFilterView>